{
  "name": "stafplicatie-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "openapi-ts": "openapi-ts",
    "stfpl-swagger": "openapi-ts -i http://localhost:8080/swagger/doc.json -o src/client",
    "ha-swagger": "openapi-ts -i http://localhost:8081/swagger/doc.json -o src/haag-auth-api",
    "hup-swagger": "openapi-ts -i http://localhost:8082/swagger/doc.json -o src/relations-api",
    "volunteers-swagger": "openapi-ts -i http://localhost:8083/swagger/doc.json -o src/volunteers-api",
    "campyear-swagger": "openapi-ts -i http://localhost:8084/swagger/doc.json -o src/campyear-api",
    "swagger:update": "run-p -c -n stfpl-swagger ha-swagger hup-swagger volunteers-swagger campyear-swagger"
  },
  "dependencies": {
    "@auth0/auth0-vue": "^2.4.0",
    "@tailwindcss/vite": "^4.1.3",
    "lucide-vue-next": "^0.535.0",
    "pinia": "^3.0.1",
    "tailwindcss": "^4.1.3",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.10",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.83.0",
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.51.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "daisyui": "^5.0.19",
    "eslint": "^9.22.0",
    "eslint-plugin-oxlint": "^1.0.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.4.2",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.0",
    "oxlint": "^1.0.0",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.1.1",
    "vue-tsc": "^3.0.0"
  }
}
